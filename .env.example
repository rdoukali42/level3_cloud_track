# OpenStack Configuration
OS_AUTH_URL=https://your-openstack-endpoint/v3
OS_PROJECT_ID=your-project-id
OS_PROJECT_NAME=your-project-name
OS_USER_DOMAIN_NAME=Default
OS_USERNAME=your-username
OS_PASSWORD=your-password
OS_REGION_NAME=your-region
OS_INTERFACE=public
OS_IDENTITY_API_VERSION=3

# Terraform Configuration
TF_VAR_ssh_key_name=k8s-key
TF_VAR_public_key_path=/path/to/your/public/key
TF_VAR_private_key_path=/path/to/your/private/key

# PostgreSQL Configuration
POSTGRES_DB=mydb
POSTGRES_USER=myuser
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DSN=postgres://myuser:changeme_secure_password@postgresql.default.svc.cluster.local:5432/mydb?sslmode=disable

# ZITADEL OAuth Configuration
ZITADEL_ISSUER=https://your-instance.zitadel.cloud
ZITADEL_API_CLIENT_ID=your-api-client-id
ZITADEL_FRONTEND_CLIENT_ID=your-frontend-client-id

# Frontend Configuration
VUE_APP_API_BASE_URL=http://localhost:30081
VUE_APP_REDIRECT_URI=http://localhost:8086/callback
VUE_APP_POST_LOGOUT_URI=http://localhost:8086/
